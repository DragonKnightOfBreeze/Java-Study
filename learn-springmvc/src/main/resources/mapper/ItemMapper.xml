<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.windea.study.springmvc.mapper.ItemMapper">

	<sql id="Base_Column_List">
			id,
			name,
			price,
			detail,
			imageUrl,
			createTime
	</sql>

	<resultMap id="BaseResultMap" type="com.windea.study.springmvc.domain.Item">
		<result column="id" property="id"/>
		<result column="name" property="name"/>
		<result column="price" property="price"/>
		<result column="detail" property="detail"/>
		<result column="imageUrl" property="imageUrl"/>
		<result column="createTime" property="createTime"/>
	</resultMap>


	<insert id="insert" parameterType="com.windea.study.springmvc.domain.Item">
		insert into Item
		set name=#{item.name}, price=#{item.price}, detail=#{item.detail}, imageUrl=#{item.imageUrl},
		    createTime=#{item.createTime}
	</insert>

	<!--auto generated by MybatisCodeHelper on 2019-02-14-->
	<delete id="deleteById">
		delete
		from Item
		where id = #{id}
	</delete>

	<!--auto generated by MybatisCodeHelper on 2019-02-14-->
	<select id="findById" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List"/>
		from Item
		where id=#{id}
	</select>

	<!--auto generated by MybatisCodeHelper on 2019-02-14-->
	<select id="findAll" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List"/>
		from Item
	</select>

	<!--auto generated by MybatisCodeHelper on 2019-02-15-->
	<select id="findByConditions" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List"/>
		from Item
		where 1=1
		<if test="item.name != null and item.name != ''">
			and `name` like concat('%',#{queryVo.item.name},'%')
		</if>
	</select>

	<!--auto generated by MybatisCodeHelper on 2019-02-15-->
	<update id="updateById">
		update Item
		set `name`=#{item.name}, price=#{item.price}, detail=#{item.detail}, imageUrl=#{item.imageUrl},
		    createTime=#{item.createTime}
		where id = #{id}
	</update>
</mapper>
